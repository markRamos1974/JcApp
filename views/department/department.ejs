<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department</title>
    
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <% // Daisy UI %>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="flex h-screen">
        <%- include("../partials/sideMenu.ejs") %>
        <div class="flex justify-center items-center w-full ">
            <div class="w-full relative p-10 overflow-y-scroll h-full">
                <div class="flex justify-between items-center w-full">
                    <h1 class="text-5xl font-bold mb-[70px]">Department</h1>
                    <a href="/department/add"><button class="btn btn-primary"><i class="fa-solid fa-plus"></i>Add Department</button></a>
                </div>

                <div>
                    <table class="table">
                        <thead>
                            <tr class="bg-base-100">
                                <th>ID</th> 
                                <th>Department Name</th> 
                                <th>Department Supervisor</th> 
                                <th>Date Established</th> 
                                
                            </tr>
                        </thead> 
                        <tbody>
                            <% 
                                let rowCount = 1
                                data.forEach(department => {

                                    const est_date = new Date(department.date_establised)
                                    const estYear = est_date.getFullYear()
                                    const estMonth = est_date.getMonth()
                                    const estDate = est_date.getDate()

                                    const estfullDate = `${estYear}-${estMonth}-${estDate}`
                                    

                                    if(rowCount % 2 === 0) { %>

                                        <tr class="bg-base-300 p-7">
                                            <th><%= department.dept_id %></th> 
                                            <td><%= department.dept_name %></td> 
                                            <td><%= department.dept_supervisor %></td> 
                                            <td><%= estfullDate %></td> 
                                            <td class="flex justify-end items-center">
                                                <a href="<%=`edit/department/${department.dept_id}`%>"><button class="btn btn-primary mr-4"><i class="fa-solid fa-pen-to-square"></i>Edit</button></a>
                                                <button data-deptid="<%= department.dept_id %>" class="department-remove btn btn-error"><i class="fa-solid fa-trash"></i>Remove</button>
                                            </td>
                                        </tr>

                                    <% } else { %>

                                        <tr class="bg-base-200">
                                            <th><%= department.dept_id %></th> 
                                            <td><%= department.dept_name %></td> 
                                            <td><%= department.dept_supervisor %></td> 
                                            <td><%= estfullDate %></td> 
                                            <td class="flex justify-end items-center">
                                                <a href="<%=`edit/department/${department.dept_id}`%>"><button class="btn btn-primary mr-4"><i class="fa-solid fa-pen-to-square"></i>Edit</button></a>
                                                <button data-deptid="<%= department.dept_id %>" class="department-remove btn btn-error"><i class="fa-solid fa-trash"></i>Remove</button>
                                            </td>
                                        </tr>

                                    <% } 
                                    
                                    rowCount += 1 
                                }); 
                            %> 
                        </tbody>
                    </table>
                </div> 
            </div>  
        </div>
    </div>
    
    <script src="/js/department/removeDepartment.js" type="text/javascript"></script>

 

</body>
</html>