<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
     
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <% // Daisy UI %>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="flex h-screen">
        <%- include("../partials/sideMenu.ejs") %>
        <div class="flex justify-center items-center w-full ">
            <div class="w-full relative p-10 overflow-y-scroll h-full">
                <div class="flex justify-between items-center w-full">
                    <h1 class="text-5xl font-bold mb-[70px]">Projects</h1>
                    
                    <a href="project/add">
                        <button class="btn btn-primary">
                            <i class="fa-solid fa-plus"></i>
                            Add Project
                        </button>
                    </a>
                </div>
                
                <div>
                    <table class="table">
                        <thead>
                            <tr class="bg-base-100">
                                <th>ID</th> 
                                <th>Project Name</th> 
                                <th>Start date</th> 
                                <th>End Date</th>
                            </tr>
                        </thead> 
                        <tbody>
                            <% 
                                let count = 1
                                data.forEach(project => { 

                                    const startDay = new Date(project.start_date)
                                    const endDay = new Date(project.start_date)

                                    const startMonth = startDay.getMonth()
                                    const startYear = startDay.getFullYear()
                                    const startDate = startDay.getDate()

                                    const endMonth = endDay.getMonth()
                                    const endYear = endDay.getFullYear()
                                    const endDate = endDay.getDate()

                                    const startFullDate = `${startYear}-${startMonth}-${startDate}`
                                    const endFullDate = `${endYear}-${endMonth}-${endDate}`


                                    if(count % 2 === 0) { %>
                                        <tr class="bg-base-300 p-7">
                                            <th><%= project.proj_id %></th> 
                                            <td><%= project.proj_name %></td> 
                                            <td><%= startFullDate %></td> 
                                            <td><%= endFullDate %></td> 
                                           
                                            <td class="flex justify-end items-center">
                                                <a href="<%= `edit/project/${project.proj_id}` %>">
                                                    <button class="btn btn-primary mr-4">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                        Edit
                                                    </button>
                                                </a>

                                                <button class="btn btn-error mr-4" data-remove-button data-projid="<%= project.proj_id %>"><i class="fa-solid fa-trash"></i>Remove</button>
                                                
                                                <a href="<%= `/task/${project.proj_id}` %>" >
                                                    <button class="btn btn-accent">
                                                        <i class="fa-solid fa-eye"></i>
                                                        View Task
                                                    </button>
                                                </a>

                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <tr class="bg-base-200">
                                            <th><%= project.proj_id %></th> 
                                            <td><%= project.proj_name %></td> 
                                            <td><%= startFullDate %></td> 
                                            <td><%= endFullDate %></td> 
                                           
                                            <td class="flex justify-end items-center">
                                                <a href="<%= `edit/project/${project.proj_id}` %>">
                                                    <button class="btn btn-primary mr-4">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                        Edit
                                                    </button>
                                                </a>
                                                <button class="btn btn-error mr-4" data-remove-button data-projid="<%= project.proj_id %>"><i class="fa-solid fa-trash"></i>Remove</button>
                                                <a href="<%= `/task/${project.proj_id}` %>" >
                                                    <button class="btn btn-accent">
                                                        <i class="fa-solid fa-eye"></i>
                                                        View Task
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>

                                    <% } %>
                            <% count+=1 }); %>
                        </tbody>
                    </table>
                </div>
            </div>  
        </div>
    </div>

    <script src="/js/projects/removeProject.js"> </script>
</body>
</html>